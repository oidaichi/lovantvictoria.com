---
import { Icon } from 'astro-icon/components';

interface Props {
  id: string;
  title: string;
  description: string;
  solutionTitle: string;
  result: string;
}

const { id, title, description, solutionTitle, result } = Astro.props;
---

<div class="bg-slate-900 rounded-2xl p-8 border border-slate-800 hover:border-cyan-500/50 transition-colors duration-300 flex flex-col gap-6 hover:shadow-2xl hover:shadow-cyan-500/10">
  <div>
    <div class="flex items-start gap-4">
      <span class="text-3xl font-black text-cyan-400/80">{id}</span>
      <div>
        <h4 class="text-xl font-bold text-white leading-snug" set:html={title} />
        <p class="text-slate-400 mt-1 text-md">{description}</p>
      </div>
    </div>
  </div>

  <div class="border-t border-slate-800 pt-6">
    <h5 class="font-bold text-white mb-4 flex items-center gap-3 text-lg">
      <Icon name="mdi:lightbulb-on-outline" class="w-7 h-7 text-amber-400" />
      {solutionTitle}
    </h5>
    <ul class="space-y-3 text-slate-400 text-sm pl-2">
      <slot />
    </ul>
  </div>

  {result && (
    <div class="mt-auto bg-slate-800/50 rounded-lg p-4 border border-slate-700/80">
      <p class="text-sm text-slate-300 flex items-center gap-3 font-medium">
        <Icon name="mdi:chart-line" class="w-6 h-6 text-cyan-300 shrink-0" />
        <span class="font-bold text-white mr-1">効果実績：</span>
        {result}
      </p>
    </div>
  )}
</div>
